{
	"compilerOptions": {
		// generation
		"target": "ES2016",
		"module": "ES6",
		"moduleResolution": "Node",
		"outDir": "build",
		"types": ["node"],
		"lib": ["ESNext", "DOM"],
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./src/*"]
		},
		// checks
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false
	},
	"include": ["./src/**/*", "./*.ts"],
	"exclude": ["node_modules"]
}
